<% if !notice.nil? %>
  <div class="alert alert-success">
    <%= notice %>
  </div>
<% end %>


<h2>Parte de Obra <small><%= @partwork.fecha %></small></h2>

<table class="table table-striped table-condensed table-bordered" >
  <tr>
    <th>Nombre</th>
    <th>Descripcion</th>
  </tr>
  <tr>
    <td>#id</td>
    <td><%= @partwork.id %></td>
  </tr>
  <tr>
    <td>Numero de Parte</td>
    <td><%= @partwork.numero %></td>
  </tr>
  <tr>
    <td>Jefe de Frente</td>
    <td>
      <%= @partwork.groupsofwork.chiefoffront.entity.nombre %> 
      <%= @partwork.groupsofwork.chiefoffront.entity.apellido %> 
      <%= @partwork.groupsofwork.chiefoffront.entity.razon_social %>
    </td>
  </tr>
  <tr>
    <td>Ejecutor</td>
    <td>
      <%= @partwork.groupsofwork.subcontract.supplier.entity.nombre %>
      <%= @partwork.groupsofwork.subcontract.supplier.entity.apellido %> 
      <%= @partwork.groupsofwork.subcontract.supplier.entity.razon_social %>
    </td>
  </tr>
  <tr>
    <td>WBS Nivel 1</td>
    <td><%= @partwork.groupsofwork.subsector.sector.descripcion %></td>    
  </tr>
  <tr>
    <td>WBS Nivel 2</td>
    <td><%= @partwork.groupsofwork.subsector.descripcion %></td>
  </tr>
  <tr>
    <td>Fecha de Ingreso</td>
    <td><%= @partwork.fecha.strftime("%d %b. %Y") %></td>
  </tr>
</table>




        <h2>Produccion</h2>
        <table class="table table-bordered table-striped table-condensed table-hover" style="font-size:11px;">
          <tr>
            <th>#id</th>
            <th>Partidas</th>
            <th>Unidad</th>
            <th>Cantidad</th>
            <th>P.U.</th>
            <th>Observacion</th>
          </tr>
          <% @partwork.items.each do |item| %>
          <tr>
            <td><%= item.id %></td>
            <td><%= item.list.nombre %></td>
            <td><%= item.unit.nombre %></td>
            <td><%= item.metrado %></td>
            <td><%= item.list.precio_unitario %></td>
            <td><%= item.observacion %></td>
          </tr>
          <% end %>
        </table> 


<div class="form-actions">  
  <%= link_to raw('<i class="icon-arrow-left icon-white"></i> Regresar'), production_partworks_path, :class => "btn btn-primary" %>  
</div>


