<div class="row">
  <div class="span6">
    <h2>Catalogo De Trabajadores</h2>
  </div>  
  <div class="span6">
    <br>
    <%= link_to raw('Nuevo <i class="icon-plus icon-white"></i>'), new_production_catalogofwork_path, :class => "btn btn-primary pull-right" %>
  </div>
</div>
<br>

<table class="table table-striped table-bordered table-condensed">
  <tr>
    <th>#id</th>
    <th>Nombre y Apellidos</th>
    <th>Categoria</th>
    <th>dni</th>
    <th>movil</th>
    <th>correo</th>
    <th>Acciones</th>    
  </tr>

<% @catalogofworks.each do |catalogofwork| %>
  <tr style="font-size:12px;">
    <td><%= catalogofwork.id %></td>
    <td>
      <%= catalogofwork.entity.nombre %> <%= catalogofwork.entity.apellido %> <%= catalogofwork.entity.razon_social %>
    </td>
    <td><%= catalogofwork.catalogcategorywork.nombre %></td>
    <td><%= catalogofwork.entity.dni %></td>
    <td><%= catalogofwork.movil %></td>
    <td><%= catalogofwork.mail %></td>    
    <td>
      <%= link_to raw('<i class="icon-eye-open icon-white"></i>') , [:production,catalogofwork], :class => "btn btn-small btn-info" %>
      <%= link_to raw('<i class="icon-edit icon-white"></i>') , edit_production_catalogofwork_path(catalogofwork), :class => "btn btn-small btn-success" %>
      <%= link_to raw('<i class="icon-trash icon-white"></i>'), [:production,catalogofwork], method: :delete, data: { confirm: 'Esta Seguro que desea Eliminar?' }, :class => "btn btn-small btn-danger" %>
    </td>
  </tr>
<% end %>
</table>