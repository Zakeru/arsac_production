<%= form_for([:production,@unit], :html => { :class => 'form-horizontal' }) do |f| %>

  <% if @unit.errors.any? %>
    <div id="error_explanation" class="well">
      <h2><%= pluralize(@unit.errors.count, "errores") %> cometidos</h2>

      <ul>
      <% @unit.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="control-group">
    <div class="control-label">
      <%= f.label :nombre %>
    </div>
    <div class="controls">
      <%= f.text_field :nombre %>
    </div>
  </div>
  <div class="control-group">
    <div class="control-label">
      <%= f.label :descripcion %>
    </div>
    <div class="controls">
      <%= f.text_field :descripcion %>
    </div>
  </div>
  <div class="control-group">
    <div class="controls">
      <%= f.submit :class => 'btn btn-success' %>
    </div>
  </div>

<% end %>
