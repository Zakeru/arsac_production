<div class="row">
  <div class="span3">
    <h2>Unidades</h2>  
  </div>
  <div class="span2">
    <br>
    <%= link_to raw('Nuevo <i class="icon-plus icon-white"></i>'), new_production_unit_path, :class => 'btn btn-primary pull-right' %>
  </div>
</div>
<br>

<div class="row">
  <table class="table table-striped table-bordered table-condensed table-hover span5">
    <tr>
      <th>#id</th>
      <th>Nombre</th>
      <th>Descripcion</th>
      <th>Acciones</th>    
    </tr>

  <% @units.each do |unit| %>
    <tr>
      <td><%= unit.id %></td>
      <td><%= unit.nombre %></td>
      <td><%= unit.descripcion %></td>
      <td>
        <%= link_to raw('<i class="icon-eye-open icon-white"></i>'), [:production,unit], :class => 'btn btn-small btn-info' %>
        <%= link_to raw('<i class="icon-edit icon-white"></i>'), edit_production_unit_path(unit), :class => 'btn btn-small btn-success' %>
        <%= link_to raw('<i class="icon-trash icon-white"></i>'), [:production,unit], method: :delete, data: { confirm: 'Esta seguro que desea eliminar ?' }, :class => 'btn btn-small btn-danger' %>
      </td>
    </tr>
  <% end %>
  </table>  
</div>



<div class="form-actions">
  
</div>

