<div class="row">
  <div class="span3">
    <h2>Incluye</h2>    
  </div>
  <div class="span2">
    <br>
    <%= link_to raw('Nuevo <i class="icon-plus icon-white"></i>'), new_production_equipmentincluded_path, :class => 'btn btn-success pull-right' %>
  </div>
</div>

<div class="row">
<table class="table table-striped table-hover table-condensed table-bordered span5">
  <tr>
    <th>#id</th>
    <th>Nombre</th>
    <th>Acciones</th>    
  </tr>

<% @equipmentincludeds.each do |equipmentincluded| %>
  <tr>
    <td><%= equipmentincluded.id %></td>
    <td><%= equipmentincluded.nombre %></td>
    <td>
      <%= link_to raw('<i class="icon-eye-open icon-white"></i>'), [:production,equipmentincluded], :class => 'btn btn-info btn-small' %>
      <%= link_to raw('<i class="icon-edit"></i>'), edit_production_equipmentincluded_path(equipmentincluded), :class => 'btn  btn-small' %>
      <%= link_to raw('<i class="icon-trash icon-white"></i>'), [:production,equipmentincluded], method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-small btn-danger' %>
    </td>
  </tr>
<% end %>
</table>
</div>
<div class="clearfix"></div>
<br />


