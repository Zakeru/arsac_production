<div class="row">
    <div class="span7">
        <h2>Grupos de Trabajo</h2>   
    </div>
    <div class="span5">
        <br>
        <%= link_to raw('Nuevo <i class="icon-plus icon-white"></i>'), new_production_groupsofwork_path, :class => "btn btn-primary pull-right" %>
    </div>
</div>
<br>

<table class="table table-bordered table-striped table-condensed table-hover">
  <tr>
    <th>#id</th>
    <th>WBS Nivel 1</th>
    <th>WBS Nivel 2</th>    
    <th>Jefedefrente</th>
    <th>Ejecutor</th>
    <th>Maestrodeobra</th>
    <th>Activo</th>
    <th>Acciones</th>
  </tr>

<% @groupsofworks.each do |groupsofwork| %>
  <tr style="font-size: 11px;">
    <td><%= groupsofwork.id %></td>
    <td><%= groupsofwork.sector.descripcion[0,25] %></td>
    <td><%= groupsofwork.subsector.descripcion[0,25] %></td>    
    <td>
        <%= groupsofwork.chiefoffront.entity.nombre[0,15] %>
        <%= groupsofwork.chiefoffront.entity.apellido[0,15] %>
        <%= groupsofwork.chiefoffront.entity.razon_social %>
    </td>
    <td>
        <%= groupsofwork.subcontract.supplier.entity.nombre[0,15] %>
        <%= groupsofwork.subcontract.supplier.entity.apellido[0,15] %>
        <%= groupsofwork.subcontract.supplier.entity.razon_social %>
    </td>
    <td>
        <%= groupsofwork.teacherofwork.entity.nombre[0,15] %>
        <%= groupsofwork.teacherofwork.entity.apellido[0,15] %>
        <%= groupsofwork.teacherofwork.entity.razon_social %>
    </td>
    <td>
        <% if groupsofwork.activo == 'Si' %>
            <span class="label label-success"><%= groupsofwork.activo %></span>
        <% else %>
            <span class="label label-important"><%= groupsofwork.activo %></span>
        <% end %>        
    </td>
    <td>
        <%= link_to raw('<i class="icon-eye-open icon-white"></i>'), [:production,groupsofwork], :class => "btn btn-small btn-info" %>
        <%= link_to raw('<i class="icon-edit icon-white"></i>'), edit_production_groupsofwork_path(groupsofwork), :class => 'btn btn-small btn-success' %>
        <%= link_to raw('<i class="icon-trash icon-white"></i>'), [:production,groupsofwork], method: :delete, data: { confirm: 'Esta Seguro que desea Borrar?' }, :class => 'btn btn-small btn-danger' %>
    </td>
  </tr>
<% end %>
</table>




