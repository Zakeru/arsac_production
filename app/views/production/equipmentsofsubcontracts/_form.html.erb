          <%= f.text_field :marca, placeholder: 'CAT', class: 'input-small' %>
        </div>
      </div>
      <div class='control-group'>
        <div class='control-label'>
          <%= f.label :serie %>
        </div>
        <div class='controls'>
          <%= f.text_field :serie, placeholder: 'CAT0416ELMFG02956', class: 'input-medium' %>
