        <div class='controls'>
          <%= f.text_field :anho, placeholder: '2013', class: 'input-mini', name: 'equipmentsofsubcontract[anho]' %>          
        </div>
      </div>
      <div class='control-group'>
      <div class='control-label'>
          <%= f.label :unidad %>
