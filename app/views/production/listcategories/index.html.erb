<div class="row">
  <div class="span5">
    <h2>Categorias Preciario</h2>  
  </div>
  <div class="span3">
    <br>
    <%= link_to raw('Nuevo <i class="icon-plus icon-white"></i> '), new_production_listcategory_path, :class => "btn btn-primary pull-right" %>
  </div>
</div>
<br>
<div class="row">
<table class="table table-bordered table-striped table-condensed span8">
  <tr>
    <th>#id</th>
    <th>Codigo</th>
    <th>Nombre</th>    
    <th>Acciones</th>
  </tr>

<% @listcategories.each do |listcategory| %>
  <tr style="font-size:12px;">
    <td><%= listcategory.id %></td>
    <td><%= listcategory.codigo %></td>
    <td><%= listcategory.nombre %></td>
    <td>
      <%= link_to raw('<i class="icon-eye-open icon-white"></i>'), [:production,listcategory], :class => "btn btn-small btn-info" %>
      <%= link_to raw('<i class="icon-edit icon-white"></i>'), edit_production_listcategory_path(listcategory), :class => "btn btn-small btn-success" %>
      <%= link_to raw('<i class="icon-trash icon-white"></i>'), [:production,listcategory], method: :delete, data: { confirm: 'Seguro que desea Eliminar?' }, :class => "btn btn-small btn-danger" %>
    </td>
  </tr>
<% end %>
</table>
</div>
<div class="clearfix"></div>