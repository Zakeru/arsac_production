<div class="row">
  <div class="span6">
    <h2>Proveedores General</h2>
  </div>  
  <div class="span6">
    <br>
    <%= link_to raw('Nuevo <i class="icon-plus icon-white"></i>'), new_production_supplier_path, :class => "btn btn-primary pull-right" %>
  </div>
</div>

<div class="pull-right">
  <%= will_paginate @suppliers, renderer: BootstrapPagination::Rails %>  
</div>
<table class ="table table-bordered table-striped table-condensed table-hover">
  <tr>
    <th>#</th>    
    <th>Razon social</th>
    <th>Telefono</th>
    <th>Contacto</th>
    <th>Ruc</th>
    <th>Acciones</th>
  </tr>

<% @suppliers.each do |supplier| %>
  <tr style="font-size: 12px;">
    <td><%= supplier.id %></td>    
    <td><%= supplier.entity.razon_social %> <%= supplier.entity.nombre %> <%= supplier.entity.apellido %></td>
    <td><%= supplier.telefono %></td>    
    <td><%= supplier.contacto %></td>
    <td><%= supplier.ruc %></td>        
    <td>
        <%= link_to raw('<i class="icon-eye-open icon-white"></i>'), [:production, supplier], :class => "btn btn-small btn-info" %>
        <%= link_to raw('<i class="icon-edit icon-white"></i>'), edit_production_supplier_path(supplier), :class => "btn btn-small btn-success" %>
        <%= link_to raw('<i class="icon-trash icon-white"></i>'), [:production,supplier], method: :delete, data: { confirm: 'Esta Seguro que desea Elimnar?' }, :class => "btn btn-small btn-danger" %>
    </td>
  </tr>
<% end %>
</table>