<p id="notice"><%= notice %></p>
<div class="page-header">
	<h1>Jefe de Frente</h1>
</div>

<div class="row">

<table class="table table-striped table-bordered table-condensed span6">
	<tr>
		<th>Nombre</th>
		<th>Descripcion</th>
	</tr>
	<tr>
		<td>#id</td>
		<td><%= @chiefoffront.id %></td>
	</tr>
	<tr>
		<td>Nombre</td>
		<td>
			<%= @chiefoffront.entity.nombre %> 
			<%= @chiefoffront.entity.apellido %>
			<%= @chiefoffront.entity.razon_social %>
		</td>
	</tr>
	<tr>
		<td>Telefono</td>
		<td>
			<%= @chiefoffront.telefono %>
		</td>
	</tr>
	<tr>
		<td>Movil 1</td>
		<td>
			<%= @chiefoffront.movil_1 %>
		</td>
	</tr>
	<tr>
		<td>Movil 2</td>
		<td>
			<%= @chiefoffront.movil_2 %>
		</td>
	</tr>
	<tr>
		<td>correo</td>
		<td>
			<%= @chiefoffront.mail %>
		</td>
	</tr>
	<tr>
		<td>Direccion 1</td>
		<td>
			<%= @chiefoffront.direccion_1 %>
		</td>
	</tr>
	<tr>
		<td>Direccion 2</td>
		<td>
			<%= @chiefoffront.direccion_2 %>
		</td>
	</tr>
	<tr>
		<td>Estado Civil</td>
		<td>
			<%= @chiefoffront.estado %>
		</td>
	</tr>
	<tr>
		<td>Descripcion</td>
		<td>
			<%= @chiefoffront.descripcion %>
		</td>
	</tr>
</table>
</div>
<div class="clearfix"></div>

<div class="form-actions">
	<%= link_to raw('<i class="icon-edit icon-white"></i> Editar'), edit_production_chiefoffront_path(@chiefoffront), :class => "btn btn-success" %>
	<%= link_to raw('<i class="icon-arrow-left icon-white"></i> Regresar'), production_chiefoffronts_path, :class => "btn btn-primary" %>	
</div>

