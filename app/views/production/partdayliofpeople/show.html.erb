<div class="page-header">
  <h2 class="text-left">Parte Diario de Personal <small><%= l(@partdayliofperson.fecha, format: :fecha) %></small></h2>    
</div>


<p id="notice"><%= notice %></p>

<div class="row">
<table class="table table-striped table-bordered table-condensed table-hover span12">

  <tr>
    <td><b>Numero de Parte</b></td>
    <td><%= @partdayliofperson.numero %></td>
    <td><b>WBS Nivel 1</b></td>
    <td><%= @partdayliofperson.groupsofwork.sector.descripcion %></td>
  </tr>
  <tr>
    <td><b>WBS Nivel 2</b></td>
    <td><%= @partdayliofperson.groupsofwork.subsector.descripcion %></td>
    <td><b>Jefe de Frente</b></td>
    <td>
      <%= @partdayliofperson.groupsofwork.chiefoffront.entity.nombre %>
      <%= @partdayliofperson.groupsofwork.chiefoffront.entity.apellido %>
      <%= @partdayliofperson.groupsofwork.chiefoffront.entity.razon_social %>
    </td>
  </tr>
  <tr>
    <td><b>Ejecutor</b></td>
    <td>
      <%= @partdayliofperson.groupsofwork.subcontract.supplier.entity.nombre %>
      <%= @partdayliofperson.groupsofwork.subcontract.supplier.entity.apellido %>
      <%= @partdayliofperson.groupsofwork.subcontract.supplier.entity.razon_social %>
    </td>
    <td><b>Maestro de Obra</b></td>
    <td>
      <%= @partdayliofperson.groupsofwork.teacherofwork.entity.nombre %>
      <%= @partdayliofperson.groupsofwork.teacherofwork.entity.apellido %>
      <%= @partdayliofperson.groupsofwork.teacherofwork.entity.razon_social %>
    </td>
  </tr>
</table>
</div>

<legend>Registros</legend>
<br>
<table class="table table-striped table-bordered table-condensed">
  <tr>    
    <th>Frente</th>
    <th>D.N.I</th>
    <th>Apellidos y Nombres</th>
    <th>Categoria</th>
    <th>Partida de Control</th>
    <th>Normal</th>
    <th>60%</th>
    <th>100%</th>
    <th>Total Horas</th>
  </tr>
  <% @partdayliofperson.workers.each do |worker| %>
  <tr style="font-size:11px;">
    <td><%= worker.front.nombre %></td>
    <td><%= worker.catalogofwork.entity.dni %></td>
    <td>      
      <%= worker.catalogofwork.entity.nombre %> 
      <%= worker.catalogofwork.entity.apellido %>
      <%= worker.catalogofwork.entity.razon_social %>
    </td>
    <td><%= worker.catalogofwork.catalogcategorywork.nombre %></td>
    <td><%= worker.itemsofcontrol.subphase.descripcion[0,45] %></td>
    <td><%= worker.normal %></td>
    <td><%= worker.normal_60 %></td>
    <td><%= worker.normal_100 %></td>
    <td><%= worker.total_horas %></td>
  </tr>
  <% end %>
</table>

<div class="form-actions">  
  <%= link_to raw('<i class="icon-arrow-left icon-white"></i> Regresar'), production_partdayliofpeople_path, :class => "btn btn-primary" %>  
  <%= link_to raw('Nuevo <i class="icon-plus icon-white"></i>'), new_production_partdayliofperson_path, :class => "btn btn-primary" %>
</div>

