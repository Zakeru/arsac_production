<div class="page-header">
  <h2>Tipos de Combustible</h2>
</div>

<div class="row">
<table class="table table-striped table-condensed table-bordered span6">
  <tr>
    <th>#id</th>
    <th>Tipo</th>
    <th>Combustible</th>
    <th>Precio</th>
    <th>Acciones</th>
  </tr>

<% @fueltypes.each do |fueltype| %>
  <tr>
    <td><%= fueltype.id %></td>
    <td><%= fueltype.tipo %></td>
    <td><%= fueltype.combustible %></td>
    <td><%= fueltype.precio %></td>
    <td>
      <%= link_to raw("<i class='icon-eye-open icon-white'></i>"), [:production,fueltype], class: 'btn btn-small btn-info' %>
      <%= link_to raw("<i class='icon-edit icon-white'></i>"), edit_production_fueltype_path(fueltype), class: 'btn btn-small btn-success' %>
      <%= link_to raw("<i class='icon-trash icon-white'></i>"), [:production,fueltype], method: :delete, data: { confirm: 'Esta Seguro que desea Eliminar ?' }, class: 'btn btn-small btn-danger' %>
    </td>
  </tr>
<% end %>
</table>
</div>

<div class="form-actions">
  <%= link_to raw("<i class='icon-user icon-white'></i> nuevo"), new_production_fueltype_path, class: 'btn btn-primary' %>
</div>
