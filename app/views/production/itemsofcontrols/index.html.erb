<div class="row">
  <div class="span6">
    <h2>Partidas de Control</h2>
  </div>
  <div class="span6">
    <br>
    <%= link_to raw('Nuevo <i class="icon-plus icon-white"></i>'), new_production_itemsofcontrol_path, :class => "btn btn-primary pull-right" %>
  </div>
</div>
<br>
<div class="row">
  <div class="span7">
    <!-- Paginacion-->
    <div class="pull-left">
      <%= will_paginate @lists, renderer: BootstrapPagination::Rails %>  
    </div>    
    <!-- End Paginacion -->    
  </div>
  <div class="span5">
    <!-- Search-->
    <%= form_tag "/itemsofcontrols", :method => 'get', :class => "form-search pull-right" do %>
      <div class="input-append">    
        <%= text_field_tag :search, params[:search], :class => "span3 search-query", :placeholder => "Buscar Partida" %>
        <%= submit_tag "Search", :class => "btn" %>
      </div>
    <% end %> 
    <!-- End Search -->    
  </div>
</div>

<table class="table table-bordered table-condensed table-hover" >
  <tr class="well">
    <th>#id</th>
    <th>Codigo</th>
    <th>WBS Nivel 1</th>
    <th>Cod</th>
    <th>WBS Nivel 2</th>
    <th>Cod</th>
    <th>Fase</th>
    <th>Cod</th>
    <th>Subfase</th>    
    <th>Acciones</th>    
  </tr>

<% @itemsofcontrols.each do |itemsofcontrol| %> 
  <tr style="font-size: 12px;">
    <td><%= itemsofcontrol.id %></td>
    <td><%= itemsofcontrol.subsector.sector.codigo %></td>
    <td><%= itemsofcontrol.subsector.sector.descripcion[0,15] %></td>
    <td><%= itemsofcontrol.subsector.codigo %></td>
    <td><%= itemsofcontrol.subsector.descripcion[0,30] %></td>
    <td><%= itemsofcontrol.subphase.phase.codigo %></td>
    <td><%= itemsofcontrol.subphase.phase.descripcion[0,30] %></td>
    <td><%= itemsofcontrol.subphase.phase.codigo %><%= itemsofcontrol.subphase.codigo %></td>
    <td><%= itemsofcontrol.subphase.descripcion[0,30] %></td>    
    <td>
      <%= link_to raw('<i class="icon-eye-open icon-white"></i>'), [:production,itemsofcontrol], :class => "btn btn-mini btn-info" %>
      <%= link_to raw('<i class="icon-edit icon-white"></i>'), edit_production_itemsofcontrol_path(itemsofcontrol), :class => "btn btn-mini btn-success" %>
      <%= link_to raw('<i class="icon-trash icon-white"></i>'), [:production,itemsofcontrol], method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-mini btn-danger" %>
    </td>
  </tr>
<% end %>
</table>

<div class="pull-right">
  <%= will_paginate @listas, renderer: BootstrapPagination::Rails %>  
</div>
<div class="clearfix"></div>
